  <!-- Clicks -->

  <animation>
    <type>pick</type>
    <object-name>mfd1-button-p2</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
          <condition>
            <equals>
            <property>controls/mfd/mfdpage</property>
            <value>1</value>
            </equals>
          </condition>
        <command>nasal</command>
        <script>mm.toggleScale();</script>
      </binding>
      <binding>
          <condition>
            <equals>
            <property>controls/mfd/mfdpage</property>
            <value>2</value>
            </equals>
          </condition>
          <command>property-adjust</command>
          <property>/instrumentation/efis/inputs/range-nm</property>
            <step>40</step>
            <min>20</min>
            <max>140</max>
          <wrap>false</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("switch2")</script>
      </binding>
      <binding>
            <command>property-toggle</command>
              <property>su-25/mfd1/buttons/btn.p2</property>
        </binding>
        <mod-up>
          <binding>
            <command>property-toggle</command>
              <property>su-25/mfd1/buttons/btn.p2</property>
          </binding>
        </mod-up>
    </action>
    <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>flipperSp</tooltip-id>
                <label>Scale+</label>
            </binding>
    </hovered>
