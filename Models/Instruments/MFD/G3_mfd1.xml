<animation>
        <type>material</type>
        <object-name>IPV.ekran</object-name>
        <object-name>g3_msgbars</object-name>
        <emission>
            <red>0.3</red>
            <green>0.3</green>
            <blue>0.3</blue>
            <factor-prop>/systems/electrical/outputs/instrument-lights-norm</factor-prop>
            <!-- <factor-prop>controls/mfd/displays/brightness-mm</factor-prop> -->
        </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>g3_button.001</object-name>
  <object-name>g3_button.002</object-name>
  <object-name>g3_button.003</object-name>
  <object-name>g3_button.004</object-name>
        <emission>
        <red>0.25</red>
        <green>0.25</green>
        <blue>0.25</blue>
            <factor-prop>/systems/electrical/outputs/panel-lights-norm</factor-prop>
        </emission>
        <condition>
          <property>/systems/electrical/outputs/panel-lights</property>
        </condition>
 </animation>

  <!-- Buttons -->

  <animation>
    <type>translate</type>
    <object-name>g3_button.001</object-name>
    <property>cavalon-915is/mfd1/buttons/btn.001</property>
    <factor>-0.0019</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>g3_button.002</object-name>
    <property>cavalon-915is/mfd1/buttons/btn.002</property>
    <factor>-0.0019</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>g3_button.003</object-name>
    <property>cavalon-915is/mfd1/buttons/btn.003</property>
    <factor>-0.0019</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>g3_button.004</object-name>
    <property>cavalon-915is/mfd1/buttons/btn.004</property>
    <factor>-0.0019</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- Knobs -->

  <animation>
 <type>knob</type>
 <object-name>g3_knob.001</object-name>
 <action>
        <binding>
          <command>property-adjust</command>
          <property>autopilot/settings/heading-bug-deg</property>
          <factor>1.0</factor>
          <!-- <step>1</step> -->
          <min>1</min>
          <max>361</max>
          <wrap>true</wrap>
        </binding>
  </action>
  <hovered>
        <binding>
                <command>set-tooltip</command>
                <tooltip-id>course-adj</tooltip-id>
                <label>Set heading</label>
        </binding>
  </hovered>
</animation>

<animation>
 <type>knob</type>
 <object-name>g3_knob.002</object-name>
 <action>
        <binding>
          <command>property-adjust</command>
          <property>instrumentation/nav/radials/selected-deg</property>
          <factor>1.0</factor>
          <!-- <step>1</step> -->
          <min>1</min>
          <max>361</max>
          <wrap>true</wrap>
        </binding>
  </action>
  <hovered>
        <binding>
                <command>set-tooltip</command>
                <tooltip-id>course-adj</tooltip-id>
                <label>Set course</label>
        </binding>
  </hovered>
</animation>

</PropertyList>
