<?xml version="1.0"?>

<PropertyList>

<path>asi-gauge.ac</path>

    <animation>
        <type>material</type>
        <object-name>ASIface</object-name>
        <object-name>ASIneedle</object-name>
        <emission>
            <!-- <red>0.05</red>
            <green>0.02</green>
            <blue>0.01</blue> -->
            <red>   0.25 </red>
            <green> 0.25 </green>
            <blue>  0.25 </blue>
			<factor-prop>/systems/electrical/outputs/instrument-lights-norm</factor-prop>
        </emission>
    </animation>

    <!-- <effect>
        <inherits-from>Aircraft/Cavalon-915IS/Models/Effects/panel</inherits-from>
